@page
@model DokkanBattleRoleta.Pages.CondicoesModel
@using DokkanBattleRoleta.Data
@{
    ViewData["Title"] = "Condições";
}

<!DOCTYPE html>
<html>
<head>
    <title>Condições - Roleta Dokkan Battle</title>
    <link rel="stylesheet" type="text/css" href="~/site.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
            color: #fff;
        }

        /* MENU DE NAVEGAÇÃO */
        .nav-bar {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: rgba(255, 255, 255, 0.95);
            padding: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            border-radius: 10px;
            margin: 20px auto;
            max-width: 900px;
        }

        .nav-buttons {
            display: flex;
            gap: 15px;
        }

        .nav-button {
            background-color: #FF4500;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 1em;
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .nav-button:hover {
                background-color: #FF6347;
                transform: scale(1.05);
            }

        .container {
            max-width: 1000px;
            margin: 30px auto;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            color: #000;
            text-align: center;
        }

        h1 {
            font-size: 2.5em;
            color: #FF4500;
            text-transform: uppercase;
        }

        /* LISTA DE CONDIÇÕES */
        .conditions-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }

        .condition-box {
            background: linear-gradient(135deg, #007AFF, #005BBB);
            color: #fff;
            padding: 12px 20px;
            border-radius: 10px;
            font-size: 1em;
            font-weight: bold;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s ease, background 0.3s ease;
            min-width: 250px;
        }

            .condition-box:hover {
                background: linear-gradient(135deg, #005BBB, #003F77);
                transform: scale(1.05);
            }

        /* MENSAGEM FINAL */
        .important-note {
            margin-top: 40px;
            text-align: center;
            font-size: 1.2em;
            font-weight: bold;
            color: #8B0000;
            background: rgba(255, 204, 0, 0.8);
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }
    </style>
</head>
<body>

    <!-- MENU DE NAVEGAÇÃO -->
    <div class="nav-bar">
        <div class="nav-buttons">
            <a href="/Roleta" class="nav-button">Roleta</a>
            <a href="/Categorias" class="nav-button">Categorias</a>
            <a href="/Condicoes" class="nav-button">Condições</a>
            <a href="/Eventos" class="nav-button">Eventos</a>
            <a href="/Thanks" class="nav-button">Agradecimentos</a>
        </div>
    </div>

    <div class="container">
        <h1>Condições da Roleta</h1>
        <div class="conditions-list">
            @foreach (var condicao in CondicoesData.Condicoes)
            {
                <div class="condition-box">
                    @condicao.Descricao
                </div>
            }
        </div>
    </div>

    <!-- MENSAGEM FINAL -->
    <div class="important-note">
        ANOTAÇÃO IMPORTANTE: As condições podem ser alteradas ou atualizadas com o tempo. Se não encontrares um Friend Leader na tua lista, usa o personagem que esteja dentro da categoria que foi selecionada pela roleta. Se tiveres sugestões, entra em contacto pelo Discord ou LinkedIn.
    </div>

</body>
</html>

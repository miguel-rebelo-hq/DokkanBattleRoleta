@page
@model DokkanBattleRoleta.Pages.EventosModel
@{
    ViewData["Title"] = "Eventos";
}

<!DOCTYPE html>
<html>
<head>
    <title>Eventos - Roleta Dokkan Battle</title>
    <link rel="stylesheet" type="text/css" href="~/site.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
            color: #fff;
        }

        .nav-bar {
            display: flex;
            justify-content: center;
            gap: 10px;
            background-color: #FF4500;
            padding: 15px;
            border-radius: 10px;
            margin: 20px auto;
            max-width: 900px;
        }

        .nav-button {
            padding: 10px 20px;
            background-color: #fff;
            color: #FF4500;
            border-radius: 5px;
            text-decoration: none;
            font-size: 1.2em;
            font-weight: bold;
            text-align: center;
            transition: background 0.3s, color 0.3s;
        }

            .nav-button:hover {
                background-color: #FF6347;
                color: #fff;
            }

        .container {
            max-width: 900px;
            margin: 20px auto;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.85);
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            color: #000;
        }

        h1 {
            font-size: 2.5em;
            color: #FF4500;
            text-align: center;
        }

        .event-list {
            list-style: none;
            padding: 0;
        }

        .event-item {
            font-size: 1.2em;
            padding: 10px;
            margin: 5px 0;
            background-color: #1E90FF;
            color: #fff;
            border-radius: 5px;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        }

        .back-button {
            display: block;
            margin: 20px auto;
            width: fit-content;
            padding: 10px 20px;
            background-color: #FF4500;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1.2em;
            text-align: center;
        }

            .back-button:hover {
                background-color: #FF6347;
            }
    </style>
</head>
<body>

    <div class="nav-bar">
        <a href="/Roleta" class="nav-button">Roleta</a>
        <a href="/Categorias" class="nav-button">Categorias</a>
        <a href="/Condicoes" class="nav-button">Condições</a>
        <a href="/Eventos" class="nav-button">Eventos</a>
        <a href="/Thanks" class="nav-button">Agradecimentos</a>
    </div>

    <div class="container">
        <h1>Lista de Eventos</h1>
        <ul class="event-list">
            @foreach (var evento in DokkanBattleRoleta.Data.EventosData.Eventos)
            {
                <li class="event-item">@evento.Nome</li>
            }
        </ul>

        <a href="/Roleta" class="back-button">Voltar à Roleta</a>
    </div>

</body>
</html>

@page
@model DokkanBattleRoleta.Pages.CategoriasModel
@using DokkanBattleRoleta.Data
@{
    ViewData["Title"] = "Categorias";
}

<!DOCTYPE html>
<html>
<head>
    <title>Categorias - Roleta Dokkan Battle</title>
    <link rel="stylesheet" type="text/css" href="~/site.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
            color: #fff;
        }

        /* MENU DE NAVEGAÇÃO */
        .nav-bar {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: rgba(255, 255, 255, 0.95);
            padding: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            border-radius: 10px;
            margin: 20px auto;
            max-width: 900px;
        }

        .nav-buttons {
            display: flex;
            gap: 15px;
        }

        .nav-button {
            background-color: #FF4500;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 1em;
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .nav-button:hover {
                background-color: #FF6347;
                transform: scale(1.05);
            }

        .container {
            max-width: 1000px;
            margin: 30px auto;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            color: #000;
            line-height: 1.8;
            text-align: center;
        }

        h1 {
            font-size: 2.5em;
            color: #FF4500;
            text-align: center;
            text-transform: uppercase;
        }

        /* ESTILO DA TABELA DE CATEGORIAS */
        .categories-container {
            display: flex;
            justify-content: space-between;
            gap: 15px;
            margin-top: 20px;
            overflow-x: auto;
            padding-bottom: 10px;
        }

        .rank-column {
            flex: 1;
            background-color: #FFE4B5;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            min-width: 150px;
        }

        .rank-title {
            font-size: 1.5em;
            font-weight: bold;
            color: #B22222;
            text-align: center;
            margin-bottom: 10px;
        }

        /* NOVO ESTILO DOS BOTÕES DAS CATEGORIAS */
        .category-list {
            list-style: none;
            padding: 0;
        }

            .category-list li {
                background: linear-gradient(135deg, #007AFF, #005BBB);
                color: #fff;
                padding: 10px;
                margin: 6px 0;
                border-radius: 10px;
                font-size: 1em;
                text-align: center;
                font-weight: bold;
                transition: transform 0.2s ease, background 0.3s ease;
                cursor: pointer;
            }

                .category-list li:hover {
                    background: linear-gradient(135deg, #005BBB, #003F77);
                    transform: scale(1.05);
                }
        /* MENSAGEM NO FINAL DA PÁGINA */
        .important-note {
            margin-top: 40px;
            text-align: center;
            font-size: 1.2em;
            font-weight: bold;
            color: #8B0000;
            background: rgba(255, 204, 0, 0.8);
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            unicode-bidi: bidi-override;
        }

    </style>
</head>
<body>

    <!-- MENU DE NAVEGAÇÃO -->
    <div class="nav-bar">
        <div class="nav-buttons">
            <a href="/Roleta" class="nav-button">Roleta</a>
            <a href="/Categorias" class="nav-button">Categorias</a>
            <a href="/Condicoes" class="nav-button">Condições</a>
            <a href="/Eventos" class="nav-button">Eventos</a>
            <a href="/Thanks" class="nav-button">Agradecimentos</a>
        </div>
    </div>

    <div class="container">
        <h1>Categorias e Ranks</h1>
        <div class="categories-container">
            @foreach (var rank in CategoriasData.Categorias.Select(c => c.Rank).Distinct().OrderBy(r => r))
            {
                <div class="rank-column">
                    <div class="rank-title">Rank @(rank == 6 ? "E" : rank == 5 ? "D" : rank == 4 ? "C" : rank == 3 ? "B" : rank == 2 ? "A" : "S")</div>
                    <ul class="category-list">
                        @foreach (var categoria in CategoriasData.Categorias.Where(c => c.Rank == rank).OrderBy(c => c.Nome))
                        {
                            <li>@categoria.Nome</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>

    <!-- MENSAGEM FINAL -->
    <div class="important-note">
        ANOTAÇÃO IMPORTANTE: Os Ranks variam consoante as atualizações das personagens e a vinda de personagens novas.
        Se não concordares com alguma categoria estar no Rank errado, por favor contacta-me no Discord ou LinkedIn.
    </div>

</body>
</html>
